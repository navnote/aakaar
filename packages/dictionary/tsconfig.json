{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"module": "ESNext",
		"moduleResolution": "bundler"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
