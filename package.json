{
	"$schema": "https://json.schemastore.org/package",
	"name": "aakaar",
	"scripts": {
		"build": "pnpm turbo run build",
		"dev": "pnpm turbo run dev",
		"clean": "pnpm turbo run clean",
		"clean:nm": "rm -rf node_modules && turbo run clean:nm",
		"test": "pnpm turbo run test",
		"ts": "pnpm turbo run ts",
		"check": "pnpm biome check .",
		"check:fix": "pnpm biome check . --write .",
		"check:deps": "pnpm turbo run check-deps --filter=@aakaar/scripts",
		"registry": "pnpm turbo run registry --filter=@aakaar/scripts",
		"preview": "pnpm turbo run preview",
		"local-registry": "pnpm verdaccio --config .verdaccio/config.yml",
		"cli": "pnpm node packages/cli/dist/index.js",
		"setup": "husky",
		"publish:internet": "pnpm build && pnpm turbo run publish:internet --filter=@aakaar/react --filter=@aakaar/cli --filter=@aakaar/dictionary --filter=@aakaar/global",
		"publish:local": "rm -rf ./tmp && pnpm build && pnpm turbo run publish:local --filter=@aakaar/react --filter=@aakaar/cli --filter=@aakaar/dictionary --filter=@aakaar/global",
		"prepare": "husky"
	},
	"devDependencies": {
		"@antfu/ni": "^0.23.2",
		"@biomejs/biome": "^1.9.4",
		"@tsconfig/node22": "^22.0.2",
		"@tsconfig/vite-react": "^6.3.5",
		"@types/node": "^22.15.3",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.4.1",
		"commander": "^12.1.0",
		"execa": "^9.6.0",
		"husky": "^9.1.7",
		"signal-exit": "^4.1.0",
		"tsup": "^8.0.0",
		"tsx": "^4.19.3",
		"turbo": "^2.5.4",
		"typescript": "5.8.2",
		"vite": "^6.3.5"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@base-ui-components/react": "^1.0.0-beta.4",
		"@ktibow/material-color-utilities-nightly": "^0.3.11761036883000",
		"@tabler/icons-react": "^3.34.1",
		"@tailwindcss/vite": "^4.1.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"colorjs.io": "^0.5.2",
		"global": "^4.4.0",
		"react": "^19.1.0",
		"react-colorful": "^5.6.1",
		"react-dom": "^19.1.0",
		"react-router": "^7.5.3",
		"shiki": "^3.6.0",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8",
		"verdaccio": "^6.1.2"
	}
}
