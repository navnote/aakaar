#!/usr/bin/env sh

# Run code formatting and linting checks
echo "ğŸ” Running check:fix before commit..."

# Run the check:fix command
pnpm check:fix

# Stage formatting changes only for files that were already staged and exist
echo "ğŸ“ Staging formatting changes for committed files..."
git diff --cached --name-only | while read -r file; do
    if [ -f "$file" ]; then
        git add "$file"
    fi
done

# Check if there are any changes to commit
if [ -z "$(git diff --cached --name-only)" ]; then
    echo "âŒ No changes to commit after formatting. Commit aborted."
    echo "   This usually happens when only formatting was changed and then reset."
    exit 1
fi

# If check:fix succeeds, allow the commit to proceed
echo "âœ… Code formatting and linting checks passed!"
